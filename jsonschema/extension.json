{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "扩展名称"
    },
    "publisher": {
      "type": "string",
      "description": "发布者名称"
    },
    "displayName": {
      "type": "string",
      "description": "扩展的显示名称"
    },
    "icon": {
      "type": "string",
      "description": "扩展的图标路径"
    },
    "description": {
      "type": "string",
      "description": "扩展的描述信息"
    },
    "version": {
      "type": "string",
      "description": "扩展的版本号",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "extensionType": {
      "type": "string",
      "description": "扩展类型",
      "enum": ["prompt"]
    },
    "license": {
      "type": "string",
      "description": "扩展的许可协议"
    },
    "engines": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "引擎名称"
        },
        "version": {
          "type": "string",
          "description": "引擎版本号",
          "pattern": "^>=\\d+\\.\\d+\\.\\d+$"
        }
      },
      "required": ["name", "version"],
      "additionalProperties": false
    },
    "contributes": {
      "type": "object",
      "properties": {
        "prompts": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Prompt模板名称"
              },
              "messages": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "role": {
                      "type": "string",
                      "description": "消息角色",
                      "enum": ["system", "user"]
                    },
                    "content": {
                      "type": "string",
                      "description": "消息内容"
                    }
                  },
                  "required": ["role", "content"],
                  "additionalProperties": false
                }
              },
              "userPrompt": {
                "type": "string",
                "description": "用户提示词模板"
              },
              "supports": {
                "type": "array",
                "items": {
                  "type": "string",
                  "description": "支持的场景",
                  "enum": ["chat", "codereview"]
                }
              },
              "parameters": {
                "#ref": "http://json-schema.org/draft-07/schema#"
              },
              "returns": {
                "#ref": "http://json-schema.org/draft-07/schema#"
              }
            },
            "required": ["name", "supports", "parameters", "returns"],
            "additionalProperties": true
          }
        },
        "languages": {
          "type": "array",
          "items": {
            "type": "string",
            "description": "支持的语言",
            "enum": ["c++", "c", "lua", "python"]
          }
        },
        "dependences": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "依赖名称"
              },
              "version": {
                "type": "string",
                "description": "依赖版本号",
                "pattern": "^\\^\\d+\\.\\d+\\.\\d+$"
              },
              "failStrategy": {
                "type": "string",
                "description": "失败策略",
                "enum": ["abort", "ignore"]
              }
            },
            "required": ["name", "version", "failStrategy"],
            "additionalProperties": true
          }
        }
      },
      "required": ["prompts", "languages", "dependences"],
      "additionalProperties": true
    }
  },
  "required": ["name", "publisher", "displayName", "icon", "description", "version", "extensionType", "license", "engines", "contributes"],
  "additionalProperties": true
}
